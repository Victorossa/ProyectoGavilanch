<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Acciones Controler
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Content", "Contenido", "Acciones")</li>
                            <li>@Html.ActionLink("Json", "EnvioJson", "Acciones")</li>
                            <li>@Html.ActionLink("Reridect Google", "Redireccion", "Acciones")</li>
                            <li>@Html.ActionLink("Redirect a Accion", "RedireccionAAccion", "Acciones")</li>
                            <li>@Html.ActionLink("Descargar Diploma", "DescargaArchivo", "Acciones")</li>
                            <li>@Html.ActionLink("Query String", "QueryString", "Acciones")</li>
                            <li>@Html.ActionLink("HttpGet y Post", "MetodoGetPost", "Acciones")</li>
                            <li>@Html.ActionLink("ViewBag y ViewData", "ViewBagViewData", "Acciones")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Las Vistas
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Lista Productos", "Index", "productos")</li>
                            <li>@Html.ActionLink("Listado x viewbag", "CargaLista", "TemaVistas")</li>
                            <li>@Html.ActionLink("Action Link", "MiAction", "TemaVistas")</li>
                            <li>@Html.ActionLink("Carga Peliculas", "CargarPeliculas", "TemaVistas")</li>
                            <li>@Html.ActionLink("Carga Peliculas Raw", "CargarPeliculasConRaw", "TemaVistas")</li>
                            <li>@Html.ActionLink("Render Action y Action", "RenderActionYAction", "TemaVistas")</li>
                            <li>@Html.ActionLink("Display y Display Templates", "DisplayYDisplayTemplates", "TemaVistas")</li>
                            <li>@Html.ActionLink("Editor Templates", "EditorTemplates", "TemaVistas")</li>
                            <li>@Html.ActionLink("DropDown desde controlador y vista", "DropDownEnVista", "TemaVistas")</li>
                            <li>@Html.ActionLink("DropDown desde un Enum", "DropDownDesdeUnEnum", "TemaVistas")</li>
                            <li>@Html.ActionLink("Formulario en Razor con BeginForm", "FormularioRazorBeginForm", "TemaVistas")</li>
                            <li>@Html.ActionLink("Vistas Parciales", "VistasParciales", "TemaVistas")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Validando Modelos
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Validacion Personalizada de campo", "Index", "peliculas")</li>
                        </ul>
                    </li>
                    texto suelto
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Aplicación de Pruebas Gavilanch</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
