@model IEnumerable<ModeloDatos.Datos.peliculas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", "Peliculas", new { atributo = "1000", @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstaEnCartelera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaProduccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoParPelicula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstaEnCartelera)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaProduccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoParPelicula)
        </td>
        <td>
        <td class="text-right">

            <a class="btn btn-default" href="~/Peliculas/Edit/@item.Pelicula_Id" title="Editar">
                <i class="glyphicon glyphicon-pencil"></i>
            </a>
            <a class="btn btn-success" href="~/Peliculas/Details/@item.Pelicula_Id" title="Detalles">
                <i class="glyphicon glyphicon-eye-open"></i>
            </a>
            <a class="btn btn-danger" href="~/Peliculas/Delete/@item.Pelicula_Id" title="Eliminar">
                <i class="glyphicon glyphicon-remove"></i>
            </a>
        </td>
        </td>
    </tr>
}

</table>
